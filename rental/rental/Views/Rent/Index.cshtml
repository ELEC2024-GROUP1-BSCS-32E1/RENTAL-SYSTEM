@model rental.Models.RentViewModel

@{
    ViewData["Title"] = "Rent Equipment - RentEasy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/rent_form.css" />
</head>
<body>
    <div class="main-content">
        <section class="rent-form">
            <div class="equipment-details">
                <img src="~/image/@Model.ImageUrl" alt="@Model.Name">
                <h2>@Model.Name</h2>
                <p>Price: @Model.Price</p>
            </div>

            <!-- Rent form -->
            <form id="rentalForm" asp-action="SubmitRent" method="post">
                <input type="hidden" name="equipmentId" value="@Model.EquipmentId" />
                <div class="form-group">
                    <label asp-for="Name">Your Name:</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Phone Number:</label>
                    <input asp-for="Phone" class="form-control" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate">Start Date:</label>
                    <input asp-for="StartDate" type="date" class="form-control" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate">End Date:</label>
                    <input asp-for="EndDate" type="date" class="form-control" required />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </section>
    </div>

    <!-- Include necessary scripts -->
</body>
</html>