@* Views/Services/Index.cshtml *@
@{
    ViewData["Title"] = "RentEasy - Services";
}

<head>
    <link rel="stylesheet" href="~/css/service.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>

<body>
    <div class="main-content">
        <section class="services">
            <h1>Our Services</h1>
            <div class="service-grid">
                <div class="service-card">
                    <img src="~/image/logo2.png" alt="Equipment Rentals">
                    <h3>Equipment Rentals</h3>
                    <p>We offer a wide range of heavy construction equipment available for rent. From excavators to bulldozers, we have the machinery you need for your project.</p>
                </div>
                <div class="service-card">
                    <img src="~/image/logo1.png" alt="Maintenance Services">
                    <h3>Maintenance Services</h3>
                    <p>Our expert team provides maintenance services to keep your equipment running smoothly. Prevent costly downtimes with our scheduled maintenance plans.</p>
                </div>
                <div class="service-card">
                    <img src="~/image/logo3.png" alt="Consultation">
                    <h3>Consultation</h3>
                    <p>Get professional advice on choosing the right equipment for your projects. Our consultation services are tailored to meet your specific needs.</p>
                </div>
            </div>
        </section>
    </div>

    <script src="~/js/services.js"></script>
</body>
